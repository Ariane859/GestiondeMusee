{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
   <div class="container mt-4">
    <h1>Site</h1>
    
     <table class="table">
        <tbody>
            <tr>
            <th>Numéro Musée :</th>
            <td>{{ bibliotheque.numMus }}</td>
            </tr>
            <tr>
            <th>ISBN :</th>
            <td>{{ bibliotheque.ISBN }}</td>
            </tr>
            <tr>
            <th>Date d'achat :</th>
            <td>{{ bibliotheque.dateAchat.format('Y-m-d') }}</td>
            </tr>
        </tbody>
    </table>
    <div class="text-right">
    <a href="{{ path('admin.bibliotheque.index') }}" class="btn btn-primary">Retourner à la liste</a>
    </div>  
    <a href="{{ path('admin.bibliotheque.edit', {'id': bibliotheque.id}) }}" class="btn btn-primary">Editer</a>
    
    {{ include('admin/bibliotheque/_delete_form.html.twig') }}
    
{% endblock %}
