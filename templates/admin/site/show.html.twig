{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
   <div class="container mt-4">
    <h1>Site</h1>
    
     <table class="table">
        <tbody>
            <tr>
            <th>Nom du site :</th>
            <td>{{ site.nomSite }}</td>
            </tr>
            <tr>
            <th>Année :</th>
            <td>{{ site.anneedecouv.format('Y-m-d') }}</td>
            </tr>
            <tr>
            <th>Code du pays :</th>
            <td>{{ site.codePays }}</td>
            </tr>
        </tbody>
    </table>
    <div class="text-right">
    <a href="{{ path('admin.site.index') }}" class="btn btn-primary">Retourner à la liste</a>
    </div>  
    <a href="{{ path('admin.site.edit', {'id': site.id}) }}" class="btn btn-primary">Editer</a>
    
    {{ include('admin/site/_delete_form.html.twig') }}
    
{% endblock %}
